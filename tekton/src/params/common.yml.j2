# Common Parameters
# -------------------------------------------------------------------------
# Tekton Pipeline image pull policy (for ibmmas/cli images)
- name: image_pull_policy
  type: string
  default: Always
  description: Pull policy for pipeline container images

# Development Build Support 
- name: artifactory_username
  default: ""
  type: string
  description: Required to install development MAS catalogs
- name: artifactory_token
  default: ""
  type: string
  description: Required to install development MAS catalogs

# Custom Labels
- name: custom_labels
  type: string
  default: ""
  description: Optional custom labels, comma separated list of key=value pairs

# MAS Configuration
- name: mas_channel
  type: string
  default: ""
- name: mas_instance_id
  type: string
  default: ""

# SSO Configuration
- name: idle_timeout
  type: string
  default: "1800"
- name: idp_session_timeout
  type: string
  default: "12h"
- name: access_token_timeout
  type: string
  default: "30m"
- name: refresh_token_timeout
  type: string
  default: "12h"
- name: default_idp
  type: string
  default: "local"
- name: seamless_login
  type: string
  default: "false"