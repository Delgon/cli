---
apiVersion: tekton.dev/v1beta1
kind: Task
metadata:
  name: mas-devops-odh
spec:
  params:
    {{ lookup('template', task_src_dir ~ '/common/cli-params.yml.j2') | indent(4) }}

    # Pre-Release Support
    - name: artifactory_username
      default: ''
      type: string
      description: Required to use development MAS builds
    - name: artifactory_token
      default: ''
      type: string
      description: Required to use development MAS builds

    # Entitlement
    - name: ibm_entitlement_key
      type: string

    # MAS Details
    - name: mas_instance_id
      type: string
      description: Instance ID

    # Application - Operator
    - name: mas_aibroker_channel
      type: string
      description: Catalog channel for the application operator subscription

    # Application - Operand
    - name: mas_app_bindings_jdbc
      default: ""
      type: string
    - name: mas_app_plan
      type: string
      description: Application installation plan
      default: ""

    # Custom Label Support
    - name: custom_labels
      type: string
      description: Optional MAS custom labels, comma separated list of key=value pairs
      default: ""

    # Opendatahub details
    - name: storage_provider
      type: string
      default: "This option is mandatory"
      default: ""
    - name: storage_accesskey
      type: string
      default: "This option is mandatory"
      default: ""
    - name: storage_secretkey
      type: string
      default: "This option is mandatory"
      default: ""
    - name: storage_host
      type: string
      default: "This option is mandatory"
      default: ""
    - name: storage_port
      type: string
      default: "This option is mandatory"
      default: ""
    - name: storage_ssl
      type: string
      default: "This option is mandatory"
      default: ""
    - name: storage_region
      type: string
      default: "This option is mandatory"
      default: ""
    - name: storage_piplines_bucket
      type: string
      default: "This option is mandatory"
      default: ""
    - name: storage_tenants_bucket
      type: string
      default: "This option is mandatory"
      default: ""
    - name: tenantName
      type: string
      default: "This option is mandatory"
      default: ""

  stepTemplate:
    env:
      {{ lookup('template', task_src_dir ~ '/common/cli-env.yml.j2') | indent(6) }}

      # Pre-Release Support
      - name: ARTIFACTORY_USERNAME
        value: $(params.artifactory_username)
      - name: ARTIFACTORY_TOKEN
        value: $(params.artifactory_token)

      # Entitlement
      - name: IBM_ENTITLEMENT_KEY
        value: $(params.ibm_entitlement_key)

      # MAS Details
      - name: MAS_INSTANCE_ID
        value: $(params.mas_instance_id)

      # Application - Operator
      - name: MAS_AIBROKER_CHANNEL
        value: $(params.mas_aibroker_channel)

      # Custom Label Support
      - name: CUSTOM_LABELS
        value: $(params.custom_labels)

      # Opendatahub details
      - name: storage_provider
        value: $(params.storage_provider)
      - name: storage_accesskey
        value: $(params.storage_accesskey)
      - name: storage_secretkey
        value: $(params.storage_secretkey)
      - name: storage_host
        value: $(params.storage_host)
      - name: storage_port
        value: $(params.storage_port)
      - name: storage_ssl
        value: $(params.storage_ssl)
      - name: storage_region
        value: $(params.storage_region)
      - name: storage_piplines_bucket
        value: $(params.storage_piplines_bucket)
      - name: storage_tenants_bucket
        value: $(params.storage_tenants_bucket)
      - name: tenantName
        value: $(params.tenantName)

  steps:
    - name: odh
      command:
        - /opt/app-root/src/run-role.sh
        - odh
      image: quay.io/ibmmas/cli:latest
      imagePullPolicy: $(params.image_pull_policy)
