- name: kmodels
  params:
    {{ lookup('template', 'taskdefs/common/cli-params.yml.j2') | indent(4) }}
    - name: devops_suite_name
      value: kmodels
    - name: mas_instance_id
      value: $(params.mas_instance_id)
    - name: mas_app_id
      value: aibroker
    - name: artifactory_username
      value: $(params.artifactory_username)
    - name: artifactory_token
      value: $(params.artifactory_token)
    - name: mas_app_channel
      value: "$(params.mas_app_channel_manage)"
    - name: ibm_entitlement_key
      value: $(params.ibm_entitlement_key)
    - name: custom_labels
      value: $(params.custom_labels)
    - name: mas_aibroker_channel
      value: $(params.mas_aibroker_channel)
    - name: controllerTag
      value: $(params.controllerTag)
    - name: storeTag
      value: $(params.storeTag)
    - name: watcherTag
      value: $(params.watcherTag)
    - name: connectorTag
      value: $(params.connectorTag)
    - name: pipelineStepsTag
      value: $(params.pipelineStepsTag)
    - name: storage_piplines_bucket
      value: $(params.storage_piplines_bucket)
    - name: storage_tenants_bucket
      value: $(params.storage_tenants_bucket)
  taskRef:
    name: mas-devops-kmodels
    kind: Task
  when:
    - input: "$(params.mas_aibroker_channel)"
      operator: notin
      values: [""]
